datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model TeaParty {
  id Int @id @default(autoincrement())

  date DateTime @unique

  host     Member @relation("HostRelation", fields: [hostId], references: [id])
  hostId   Int
  cohost   Member @relation("CohostRelation", fields: [cohostId], references: [id])
  cohostId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id Int @id @default(autoincrement())

  sub              String     @unique
  name             String
  avatar           String
  hostedTeaParty   TeaParty[] @relation("HostRelation")
  cohostedTeaParty TeaParty[] @relation("CohostRelation")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ConfirmedSub {
  id        Int      @id @default(autoincrement())
  sub       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RW_DataMigration {
  version    String   @id
  name       String
  startedAt  DateTime
  finishedAt DateTime
}
